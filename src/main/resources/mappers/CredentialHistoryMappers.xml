<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tool.passfort.mapper.CredentialHistoryMapper">

    <!-- 多参数查询 -->
    <select id="selectByParams" parameterType="map" resultType="org.tool.passfort.model.CredentialHistory">
        SELECT * FROM credential_history
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="encryptionId != null">
                AND encryption_id = #{encryptionId}
            </if>
            <if test="platform != null and platform != ''">
                AND platform = #{platform}
            </if>
            <if test="account != null and account != ''">
                AND account = #{account}
            </if>
        </where>
    </select>

    <!-- 根据历史ID查询 -->
    <select id="selectByHistoryId" parameterType="int" resultType="org.tool.passfort.model.CredentialHistory">
        SELECT * FROM credential_history WHERE history_id = #{historyId}
    </select>

    <!-- 删除指定用户id，具体account和platform的某个创建时间前的所有历史记录 -->
    <delete id="deleteByUserIdAccountPlatformAndCreatedAtBefore">
        DELETE FROM credential_history
        WHERE user_id = #{userId}
          AND account = #{account}
          AND platform = #{platform}
          AND created_at &lt; #{createdAt}
    </delete>

</mapper>